---
import { convertPathToHtml } from "../../../utils/index.js"
const { path, mainPage, page } = Astro.props
const htmlPath = convertPathToHtml(path);

// Smart path resolution: calculate relative path based on directory depth
const pathname = Astro.url.pathname;
const pathSegments = pathname.split('/').filter(segment => segment !== '');
const depth = pathSegments.length > 0 ? pathSegments.length - 1 : 0;
const deploymentPath = depth === 0 ? './' : '../'.repeat(depth);
---

<!--begin::Sidebar-->
<aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
  <!--begin::Sidebar Brand-->
  <div class="sidebar-brand">
    <!--begin::Brand Link-->
    <a href={htmlPath + "/index.html"} class="brand-link">
      <!--begin::Brand Image-->
      <img
        src={deploymentPath + "assets/img/AdminLTELogo.png"}
        alt="AdminLTE Logo"
        class="brand-image opacity-75 shadow"
      />
      <!--end::Brand Image-->
      <!--begin::Brand Text-->
      <span class="brand-text fw-light">Perfume AI</span>
      <!--end::Brand Text-->
    </a>
    <!--end::Brand Link-->
  </div>
  <!--end::Sidebar Brand-->
  <!--begin::Sidebar Wrapper-->
  <div class="sidebar-wrapper">
    <nav class="mt-2">
      <!--begin::Sidebar Menu-->
      <ul
        class="nav sidebar-menu flex-column"
        data-lte-toggle="treeview"
        role="navigation"
        aria-label="Main navigation"
        data-accordion="false"
        id="navigation"
      >
        <!-- 主页 -->
        <li class="nav-item">
          <a
            href={htmlPath + "/index.html"}
            class:list={["nav-link", mainPage === "dashboard" && "active"]}
          >
            <i class="nav-icon bi bi-speedometer"></i>
            <p>主页</p>
          </a>
        </li>

        <!-- 原料 -->
        <li class="nav-item">
          <a
            href={htmlPath + "/materials/index.html"}
            class:list={["nav-link", mainPage === "materials" && "active"]}
          >
            <i class="nav-icon bi bi-box-seam"></i>
            <p>原料</p>
          </a>
        </li>

        <!-- GC-MS -->
        <li class="nav-item">
          <a
            href={htmlPath + "/gcms/index.html"}
            class:list={["nav-link", mainPage === "gcms" && "active"]}
          >
            <i class="nav-icon bi bi-activity"></i>
            <p>GC-MS</p>
          </a>
        </li>

        <!-- AI配方（含子菜单） -->
        <li class:list={["nav-item", mainPage === "ai" && "menu-open"]}>
          <a href="#" class:list={["nav-link", mainPage === "ai" && "active"]}>
            <i class="nav-icon bi bi-magic"></i>
            <p>
              AI配方
              <i class="nav-arrow bi bi-chevron-right"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a
                href={htmlPath + "/ai/formulas.html"}
                class:list={["nav-link", page === "ai-formulas" && "active"]}
              >
                <i class="nav-icon bi bi-circle"></i>
                <p>配方查询</p>
              </a>
            </li>
            <li class="nav-item">
              <a
                href={htmlPath + "/ai/studio.html"}
                class:list={["nav-link", page === "ai-studio" && "active"]}
              >
                <i class="nav-icon bi bi-circle"></i>
                <p>AI创香</p>
              </a>
            </li>
          </ul>
        </li>

        <!-- 订单管理 -->
        <li class="nav-item">
          <a
            href={htmlPath + "/orders/index.html"}
            class:list={["nav-link", mainPage === "orders" && "active"]}
          >
            <i class="nav-icon bi bi-receipt"></i>
            <p>订单管理</p>
          </a>
        </li>

        <!-- 客户管理 -->
        <li class="nav-item">
          <a
            href={htmlPath + "/customers/index.html"}
            class:list={["nav-link", mainPage === "customers" && "active"]}
          >
            <i class="nav-icon bi bi-people"></i>
            <p>客户管理</p>
          </a>
        </li>

        <!-- 系统设置 -->
        <li class="nav-item">
          <a
            href={htmlPath + "/settings/index.html"}
            class:list={["nav-link", mainPage === "settings" && "active"]}
          >
            <i class="nav-icon bi bi-gear"></i>
            <p>系统设置</p>
          </a>
        </li>

        <!-- 用户信息 -->
        <li class="nav-item">
          <a
            href={htmlPath + "/account/profile.html"}
            class:list={["nav-link", mainPage === "account" && "active"]}
          >
            <i class="nav-icon bi bi-person"></i>
            <p>用户信息</p>
          </a>
        </li>
      </ul>
      <!--end::Sidebar Menu-->
    </nav>
  </div>
  <!--end::Sidebar Wrapper-->
</aside>
<!--end::Sidebar-->
